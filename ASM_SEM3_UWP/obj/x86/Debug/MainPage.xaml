<Page
    x:Class="ASM_SEM3_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_SEM3_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
>
    <Grid x:ConnectionId='2'
        x:Name="grip1"
        >
        <Grid.Background>
            <ImageBrush x:ConnectionId='3'
                x:Name="imageHome"
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.3"
                ImageSource="/Assets/home.png"/>
        </Grid.Background>
        <FlipView MaxWidth="1600" Height="480">
            <Image Source="ms-appx:///Assets/img/headphone2.jpg" AutomationProperties.Name="Cliff"/>
            <Image Source="ms-appx:///Assets/img/headphone3.jpg" AutomationProperties.Name="Grapes"/>
            <Image Source="ms-appx:///Assets/img/headphone4.jpg" AutomationProperties.Name="Rainier"/>
            <Image Source="ms-appx:///Assets/img/headphone5.jpg" AutomationProperties.Name="Sunset"/>
            <Image Source="ms-appx:///Assetsimg/headphone6.jpg" AutomationProperties.Name="Valley"/>
        </FlipView>
    </Grid>
</Page>

