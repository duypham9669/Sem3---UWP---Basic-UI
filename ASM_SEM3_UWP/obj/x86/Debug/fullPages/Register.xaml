<Page
    x:Class="ASM_SEM3_UWP.fullPages.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_SEM3_UWP.fullPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
>


    <Grid x:ConnectionId='2' x:Name="main"
          >
        <Grid.Background>
            <ImageBrush
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.8"
                ImageSource="/Assets/img/headphone3.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="9*">
            </RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel
            Orientation="Vertical"
            Grid.Row="0"
            Grid.Column="0"
            >
            <TextBlock
            VerticalAlignment="Center"
             Foreground="Black"
            Padding="0,0,0,0"
            TextAlignment="Center"
            FontSize="70"
            FontFamily="Adobe Arabic"
            >Register New Account</TextBlock>
        </StackPanel>
        
        <StackPanel
             Grid.Row="1"
            Grid.Column="0"
            Orientation="Horizontal"
            HorizontalAlignment="Center"

            >
            
            
        <StackPanel
            Width="800"
            Orientation="Vertical"
            HorizontalAlignment="Center"

            >
            <Border BorderBrush="White" BorderThickness="0,0,0,1">
            <TextBox x:ConnectionId='25'
                Margin="0,10,0,0"
                x:Name="input_firstName"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="First Name"
                Background="{x:Null}"
                FocusVisualPrimaryBrush="{x:Null}"/>
        </Border>

            <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBox x:ConnectionId='24'
                Margin="0,10,0,0"
                x:Name="input_lastName"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Last Name"
                Background="{x:Null}"/>
                </Border>
                <TextBlock
                 FontSize="15"
                    Foreground="White"
                    >gender</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:ConnectionId='21' GroupName="gender" Tag="Male"                        >Male</RadioButton>
                    <RadioButton x:ConnectionId='22' GroupName="gender" Tag="Female"                        >Female</RadioButton>
                    <RadioButton x:ConnectionId='23' GroupName="gender" Tag="Other"                         IsChecked="True">Other</RadioButton>
                </StackPanel>
                <TextBlock
                 Opacity="0.7"
                Margin="0,10,0,0"
                VerticalAlignment="Center"
                FontSize="15"
                Foreground="White"
                FontFamily="Adobe Arabic"
                >Date of Birth</TextBlock>
                <CalendarDatePicker x:ConnectionId='12'
                x:Name="input_birthDay"
                                                    
                Margin="0,0,0,0"
                FontSize="15"
                FontFamily="Adobe Arabic"
                ></CalendarDatePicker>
            
                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                <PasswordBox x:ConnectionId='20'
                    Margin="0,10,0,0"
                x:Name="input_pass1"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="PassWord"
                Background="{x:Null}"/>
            </Border>

            <Border BorderBrush="White" BorderThickness="0,0,0,1">
                <PasswordBox x:ConnectionId='19'
                    Margin="0,10,0,0"
                x:Name="input_pass2"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Confirm  PassWord"
                Background="{x:Null}"/>
            </Border>

            <Border BorderBrush="White" BorderThickness="0,0,0,1">
                <TextBox x:ConnectionId='18'
                    Margin="0,10,0,0"
                x:Name="input_address"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Address"
                Background="{x:Null}"/>
            </Border>

            <Border BorderBrush="White" BorderThickness="0,0,0,1">
                <TextBox x:ConnectionId='17'
                    Margin="0,10,0,0"
                x:Name="input_phone"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Phone"
                Background="{x:Null}"/>
            </Border>

            <Border BorderBrush="White" BorderThickness="0,0,0,1">
                <TextBox x:ConnectionId='16'
                    Margin="0,10,0,0"
                x:Name="input_avataLink"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Avata Link"
                Background="{x:Null}"/>
            </Border>

            
            
            <Border BorderBrush="White" BorderThickness="0,0,0,1">
                <TextBox x:ConnectionId='15'
                    Margin="0,10,0,0"
                x:Name="input_email"
                FontSize="15"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Email"
                Background="{x:Null}"/>
            </Border>

            <Grid>
                
                <Button x:ConnectionId='13'
                    Margin="100,40,0,0"
                    Grid.Column="0"
                    Background="Green"
                    FontSize="25"
                    FontFamily="Adobe Arabic"
                    HorizontalAlignment="Left"
                                        
                        >Register</Button>
                <Button x:ConnectionId='14'
                    Margin="0,40,100,0"
                    Grid.Column="0"
                    Background="red"
                    FontSize="25"
                    FontFamily="Adobe Arabic"
                    HorizontalAlignment="Right"
                                      RenderTransformOrigin="0.501,0.5"
                        >Login</Button>
            </Grid>
            
           
        </StackPanel>
            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center"
                
                >
                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='11'
                Margin="0,22,0,0"
                x:Name="vld_firstName"
                FontSize="15"
                Foreground="Red"
                ></TextBlock>

                </Border>

                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='10'
                Margin="0,10,0,12"
                x:Name="vld_lastName"
                FontSize="15"
                Foreground="Red"
               ></TextBlock>
                </Border>
                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='9'
                    Margin="0,59,0,12"
                x:Name="vld_dateOfBirth"
                FontSize="15"
                Foreground="Red"
                />
                </Border>
                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='8'
                    Margin="0,30,0,12"
                x:Name="vld_pass1"
                FontSize="15"
                Foreground="Red"
                />
                </Border>

                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='7'
                    Margin="0,10,0,12"
                x:Name="vld_pass2"
                FontSize="15"
                Foreground="Red"
                />
                </Border>

                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='6'
                    Margin="0,10,0,12"
                x:Name="vld_address"
                FontSize="15"
                Foreground="Red"
               />
                </Border>

                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='5'
                    Margin="0,10,0,12"
                x:Name="vld_phone"
                FontSize="15"
                Foreground="Red"
                />
                </Border>

                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='4'
                    Margin="0,10,0,12"
                x:Name="vld_avataLink"
                FontSize="15"
                Foreground="Red"
                />
                </Border>

                <!--input date of birth-->

                <Border BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='3'
                    Margin="0,10,0,12"
                x:Name="vld_email"
                FontSize="15"
                Foreground="Red"
                />
                </Border>
               
                <Grid>
                    <TextBlock
                    Margin="0,0,0,0"></TextBlock>
                </Grid>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>


