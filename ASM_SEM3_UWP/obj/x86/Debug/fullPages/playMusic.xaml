<Page
    x:Class="ASM_SEM3_UWP.fullPages.playMusic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_SEM3_UWP.fullPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

        <Grid>
            <Grid.Background>
                <ImageBrush x:ConnectionId='2'
                    x:Name="imageHome"
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.3"
                ImageSource="/Assets/img/headphone6.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="8*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

            <Grid
            Grid.Row="0"
            Grid.Column="0"
            Background="White" Margin="0,0,0,34"
            >
                <TextBlock
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Foreground="Black"
            FontSize="40"
            FontFamily="Adobe Arabic"
            >New Music Today</TextBlock>
                <ProgressRing x:ConnectionId='12'
                        FontSize="50"
                        x:Name="progress1"/>
            </Grid>
            
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                Orientation="Vertical"
                >
                <TextBlock x:ConnectionId='8'
                    x:Name="result"
                    FontSize="30"
                    >
                    
                </TextBlock>
                <Image x:ConnectionId='9' x:Name="ImageControl" Width="600" Height="600"/>

                <TextBlock x:ConnectionId='10'
                    x:Name="songName"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Foreground="Black"
            FontSize="25"
            FontFamily="Adobe Arabic"
            >Name</TextBlock>
                <TextBlock x:ConnectionId='11'
                    x:Name="songDescription"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Foreground="Black"
            FontSize="25"
            FontFamily="Adobe Arabic"
            >description</TextBlock>
            </StackPanel>
            <StackPanel
            Grid.Row="1"
            Grid.Column="1"
                VerticalAlignment="Bottom"
                Orientation="Vertical"
            >

                <CommandBar
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center" Margin="0,0,0,0"
                >
                    <AppBarToggleButton Icon="Shuffle" Label="Shuffle"/>
                    <AppBarToggleButton Icon="RepeatAll" Label="Repeat"/>
                    <AppBarSeparator/>
                    <AppBarButton x:ConnectionId='4' Icon="Back" Label="Previous"                         />
                    <AppBarButton x:ConnectionId='5' x:Name="PlayButton" Icon="Play" Label="Play"                           />
                    <AppBarButton x:ConnectionId='6' Icon="Forward" Label="Next"                     />

                    <CommandBar.SecondaryCommands>
                        <AppBarButton Label="Like"/>
                        <AppBarButton Label="Dislike"/>
                    </CommandBar.SecondaryCommands>
                    <CommandBar.Content>
                        <TextBlock x:ConnectionId='7'
                        Foreground="White"
                        FontSize="25"
                        FontFamily="Adobe Arabic"
                        x:Name="StatusText" Text="Now playing..." Margin="0"/>
                    </CommandBar.Content>
                </CommandBar>
                <MediaPlayerElement x:ConnectionId='3' 
                x:Name="MyPlayer"/>
            </StackPanel>
        </Grid>
        
        </Grid>
</Page>

