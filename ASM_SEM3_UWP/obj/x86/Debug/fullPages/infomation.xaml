<Page
    x:Class="ASM_SEM3_UWP.fullPages.infomation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_SEM3_UWP.fullPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ASM_SEM3_UWP.model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid
        Background="#ebf0f6"
        >
        <!--<Grid.Background>
            <ImageBrush
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.8"
                ImageSource="/Assets/img/headphone4.jpg"/>
        </Grid.Background>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*">
            </RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,40,0"
                MaxWidth="400"
                HorizontalAlignment="Center"
                >
                <Image x:ConnectionId='21'
                    x:Name="avatar"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="https://lh3.googleusercontent.com/d/1g-YIc11IDc3NPrOVtz0JAPh9EvLVv6EY=s720?authuser=0"
                    ></Image>
            </StackPanel>
            
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Padding="0,40,0,0"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel
                    
                    Grid.Row="0"
                    >
                    <TextBlock x:ConnectionId='16'
              x:Name="memberName"
             Foreground="Black"
            Padding="40,0,0,10"
            FontSize="60"
            FontFamily="Adobe Arabic" 
            >name
                </TextBlock>
                    <ProgressRing x:ConnectionId='17'
                        FontSize="50"
                        x:Name="progress1"/>
                <StackPanel
                    Margin="40,0,0,0"
                    Orientation="Vertical"
                    >
                        <StackPanel
                            Orientation="Horizontal"
                            >
                            <SymbolIcon
                                Symbol="CellPhone" IsHitTestVisible="False" FocusVisualPrimaryBrush="Black" Foreground="Black"/>
                            <TextBlock x:ConnectionId='20'
                         x:Name="memberPhone"
                        Foreground="Black"
                        FontSize="25"
                        FontFamily="Adobe Arabic"
                        >
                            </TextBlock>
                        </StackPanel>


                        <StackPanel
                            Orientation="Horizontal"
                            >
                            <SymbolIcon
                                Symbol="Home" IsHitTestVisible="False" FocusVisualPrimaryBrush="Black" Foreground="Black"/>
                            <TextBlock x:ConnectionId='19'
                        IsRightTapEnabled="False"
                            x:Name="memberAddress"
                        Foreground="Black"
                        FontSize="25"
                        FontFamily="Adobe Arabic" 
                        />
                        </StackPanel>

                        <StackPanel
                            Orientation="Horizontal"
                            >
                            <SymbolIcon
                                Symbol="Mail" IsHitTestVisible="False" FocusVisualPrimaryBrush="Black" Foreground="Black"/>

                            <TextBlock x:ConnectionId='18'
                        x:Name="memberEmail"
                        Foreground="Black"
                        FontSize="25"
                        FontFamily="Adobe Arabic" 
                        >
                            
                        </TextBlock>
                        </StackPanel>
                        
                    </StackPanel>
                <StackPanel
                    
                    Margin="40,40,0,0"
                    Orientation="Horizontal"
                    >
                    <Button
                        CornerRadius="5"
                        FontSize="25"
                        FontFamily="Adobe Arabic"
                        Background="SteelBlue"
                        >edit info</Button>
                </StackPanel>
                    
                </StackPanel>
                <StackPanel
                       Grid.Row="1"
                        >
                    <TextBlock
                        TextAlignment="Center"
                        Foreground="Black"
                        FontSize="40"
                        FontFamily="Adobe Arabic"
                        >Top Songs</TextBlock>
                </StackPanel>
            </Grid>
                
            
        </Grid>

        <StackPanel
             Grid.Row="1"
            Grid.Column="0"
             Orientation="Vertical"

            >
            <!--<Grid.Background>
                <ImageBrush
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.8"
                ImageSource="/Assets/img/headphone4.jpg"/>
            </Grid.Background>-->
            <StackPanel x:ConnectionId='2'
            Height="500"
            Margin="40,0,0,40"
            Orientation="Vertical"
            HorizontalAlignment="Center"
                                              >
                <ScrollViewer
                    IsEnabled="True"
                    >
                    <ListView x:ConnectionId='8' x:Name="Songs"                               IsItemClickEnabled="True">
                        
                            <ListView.ItemTemplate>
                        <DataTemplate                         >
                                <Border x:ConnectionId='10' Name="Border" BorderBrush="Transparent" BorderThickness="2">
                                    <Grid x:ConnectionId='11'
                                Margin="0,12,0,12"                                          >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Image x:ConnectionId='12'                             MaxWidth="100" Stretch="Fill"/>
                                        <StackPanel 
                                    Margin="12,0,0,0" 
                                    Grid.Column="1" 
                                    Orientation="Horizontal"
                                    >
                                            <TextBlock x:ConnectionId='13'
                                        Width="350"
                                         VerticalAlignment="Center"
                                        TextAlignment="Left"
                                        FontFamily="Adobe Arabic"
                                        Foreground="Black"
                                                             FontSize="25" FontWeight="SemiBold" Style="{ThemeResource BaseTextBlockStyle}" HorizontalAlignment="Left" Margin="0,0,0,6" LineHeight="20"/>

                                            <StackPanel
                                            Orientation="Horizontal">
                                                <TextBlock x:ConnectionId='15' 
                                        Width="300"
                                        VerticalAlignment="Center"
                                        TextAlignment="Left"
                                        FontFamily="Adobe Arabic"
                                        Foreground="Black"
                                                                   
                                        FontWeight="Normal" 
                                        LineHeight="25"
                                        Style="{ThemeResource BodyTextBlockStyle}" TextTrimming="CharacterEllipsis" MaxLines="1"/>
                                            </StackPanel>
                                            <StackPanel
                                            Orientation="Horizontal">
                                                <SymbolIcon
                                Symbol="Play" IsHitTestVisible="False" FocusVisualPrimaryBrush="Black" Foreground="Black"/>
                                                <TextBlock x:ConnectionId='14'
                                        Width="300"
                                        VerticalAlignment="Center"
                                        TextAlignment="Left"
                                        FontFamily="Adobe Arabic"
                                        Foreground="Black"
                                                           FontSize="20" FontWeight="Normal" HorizontalAlignment="Left" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                            </StackPanel>

                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </ScrollViewer>
                <StackPanel
                Orientation="Vertical"
                >
                <TextBlock
                    FontSize="30"
                    FontFamily="Adobe Arabic"
                    Foreground="Black"
                    >
                    Albulm Hot
                </TextBlock>
            </StackPanel>
            </StackPanel>
            <StackPanel
                Margin="80,0,0,0"
                VerticalAlignment="Bottom"
                Orientation="Vertical"
                >
                <TextBlock
                    FontSize="40"
                    FontFamily="Adobe Arabic"
                    Foreground="Black"
                    >
                    Albulm Hot
                </TextBlock>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    >
                    <Image
                    Margin="40,0,0,0"
                    HorizontalAlignment="Left"
                    Height="100"
                    Width="100"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="/Assets/album/album1.jpg"
                    ></Image>
                    <Image
                    Margin="40,0,0,0"
                    HorizontalAlignment="Left"
                    Height="100"
                    Width="100"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="/Assets/album/album2.jpg"
                    ></Image>
                    <Image
                    Margin="40,0,0,0"
                    HorizontalAlignment="Left"
                    Height="100"
                    Width="100"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="/Assets/album/album3.jpg"
                    ></Image>
                    <Image
                    Margin="40,0,0,0"
                    HorizontalAlignment="Left"
                    Height="100"
                    Width="100"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="/Assets/album/album4.jpg"
                    ></Image>
                    <Image
                    Margin="40,0,0,0"
                    HorizontalAlignment="Left"
                    Height="100"
                    Width="100"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="/Assets/album/album5.jpg"
                    ></Image>
                    <Image
                    Margin="40,0,0,0"
                    HorizontalAlignment="Left"
                    Height="100"
                    Width="100"
                    VerticalAlignment="Bottom"
                   Stretch="UniformToFill"
                    Source="/Assets/album/album6.jpg"
                    ></Image>
                </StackPanel>
            </StackPanel>
            <CommandBar
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                >

                <AppBarToggleButton Icon="Shuffle" Label="Shuffle"/>
                <AppBarToggleButton Icon="RepeatAll" Label="Repeat"/>
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='4' Icon="Back" Label="Previous"                         />
                <AppBarButton x:ConnectionId='5' x:Name="PlayButton" Icon="Play" Label="Play"                           />
                <AppBarButton x:ConnectionId='6' Icon="Forward" Label="Next"                     />

                <CommandBar.SecondaryCommands>
                    <AppBarButton Label="Like"/>
                    <AppBarButton Label="Dislike"/>
                </CommandBar.SecondaryCommands>
                <CommandBar.Content>
                    <TextBlock x:ConnectionId='7'
                        Foreground="White"
                        FontSize="25"
                        FontFamily="Adobe Arabic"
                        x:Name="StatusText" Text="Now playing..." Margin="0"/>
                </CommandBar.Content>
            </CommandBar>
            <MediaPlayerElement x:ConnectionId='3' 
                x:Name="MyPlayer"/>
        </StackPanel>


    </Grid>
</Page>


