<Page
    x:Class="ASM_SEM3_UWP.fullPages.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_SEM3_UWP.fullPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    >


    <Grid x:ConnectionId='2' x:Name="main"
          >

        <Grid.Background>
            <ImageBrush
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.8"
                ImageSource="/Assets/img/headphone3.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*">

            </RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
             Foreground="Black"
            Padding="0,00,0,0"
            FontSize="90"
            FontFamily="Adobe Arabic"
            >Login</TextBlock>
       
        <Grid
            Grid.Row="1"
            Grid.Column="0">
           
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical"
                >
                <Border 
                 Grid.Row="0"
                Grid.Column="1"
                BorderBrush="White" BorderThickness="0,0,0,1">
                    <TextBox x:ConnectionId='11'
                    FontFamily="Adobe Arabic"
                    Margin="0,10,0,0"
                    x:Name="email"
                FontSize="25"
                Foreground="Black"
                BorderThickness="0"
                PlaceholderText="Email"
                Background="{x:Null}"/>
                </Border>
                <TextBlock x:ConnectionId='3'
                x:Name="vld_email"
                FontSize="20"
                Foreground="red"
                FontFamily="Adobe Arabic"
                TextAlignment="Left"
                ></TextBlock>
                <Border
                    Margin="0,30,0,0"
                 Grid.Row="0"
                Grid.Column="1"
                BorderBrush="White" BorderThickness="0,0,0,1">
                    <PasswordBox x:ConnectionId='10'
                FontFamily="Adobe Arabic"
                x:Name="pass"
                Grid.Row="1"
                Grid.Column="1"
                FontSize="25"
                PlaceholderText="Pass"
                Foreground="Black"
                BorderThickness="0"
                Background="{x:Null}"/>
                </Border>
                <TextBlock x:ConnectionId='4'
                x:Name="vld_pass"
                FontSize="20"
                Foreground="red"
                FontFamily="Adobe Arabic"
                TextAlignment="Left"
                ></TextBlock>
                <CheckBox x:ConnectionId='5'
                    x:Name="remember"
                    Margin="0,20,0,0"
                    >Remember me</CheckBox>
                <TextBlock x:ConnectionId='6'
                    TextAlignment="Center"
                    x:Name="loginfail"
                FontSize="20"
                Foreground="red"
                FontFamily="Adobe Arabic"
                    ></TextBlock>

                <Grid
                Padding="0,0,0,0"
                Grid.Row="2"
                Grid.Column="1"
                >
                    <Button x:ConnectionId='7'
                    Grid.Column="0"
                    Background="#bce1da"
                    Margin="0,20,0,0"
                    FontSize="30"
                    FontFamily="Adobe Arabic"
                    HorizontalAlignment="Left"
                                      
                        >Login</Button>
                    <ProgressRing x:ConnectionId='8'
                        FontSize="50"
                        x:Name="progress1"/>
                    <Button x:ConnectionId='9'
                        Grid.Column="0"
                    Background="Pink"
                    Margin="0,20,0,0"
                    FontSize="30"
                    FontFamily="Adobe Arabic"
                    HorizontalAlignment="Right"
                                        
                        >Register</Button>
                </Grid>
                
            </StackPanel>
            
          
        </Grid>
       
    </Grid>

</Page>



